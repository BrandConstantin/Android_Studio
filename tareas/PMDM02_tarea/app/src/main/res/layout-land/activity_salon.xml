<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Salon">

    <ScrollView
        android:id="@+id/layoutScroll"
        android:layout_width="571dp"
        android:layout_height="249dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29">

        <TableLayout
            android:id="@+id/tabla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/fila1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/imagenVelazquez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagen_de_velazquez"
                    android:paddingStart="40dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    app:srcCompat="@drawable/velazquez_100" />

                <ImageView
                    android:id="@+id/imagenPicasso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagen_de_picasso"
                    android:paddingStart="40dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    app:srcCompat="@drawable/picasso_100" />

                <ImageView
                    android:id="@+id/imagenGoya"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagen_de_goya"
                    app:srcCompat="@drawable/imagen_goya" />

            </TableRow>

            <TableRow
                android:id="@+id/fila2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/checkBoxVelazquez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="@string/sal_n_velazquez"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/holo_blue_bright"
                    android:textColorLink="@android:color/holo_blue_bright"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkBoxPicasso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="@string/sal_n_picasso"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/holo_blue_bright"
                    android:textColorLink="@android:color/holo_blue_bright"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkBoxGoya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="@string/sal_n_goya"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/holo_blue_bright"
                    android:textColorLink="@android:color/holo_blue_bright"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:id="@+id/fila3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagenSorolla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagen_de_sorolla"
                    app:srcCompat="@drawable/sorolla_y_la_moda_01" />

                <ImageView
                    android:id="@+id/imagenMurillo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagen_de_murillo"
                    app:srcCompat="@drawable/murillo" />

                <ImageView
                    android:id="@+id/imagenDali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/imagen_de_dali"
                    app:srcCompat="@drawable/dali" />
            </TableRow>

            <TableRow
                android:id="@+id/fila4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/checkBoxSorolla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="@string/sal_n_sorolla"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/holo_blue_bright"
                    android:textColorLink="@android:color/holo_blue_bright"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkBoxMurillo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="@string/sal_n_murillo"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/holo_blue_bright"
                    android:textColorLink="@android:color/holo_blue_bright"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkBoxDali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="@string/sal_n_dal"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textColorHint="@android:color/holo_blue_bright"
                    android:textColorLink="@android:color/holo_blue_bright"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/botonVolverSalon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/elegir_sal_n"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutScroll" />

</android.support.constraint.ConstraintLayout>